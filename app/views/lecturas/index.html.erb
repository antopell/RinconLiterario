<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Rincon literario lectura</title>

    <!-- Custom fonts for this template-->
        <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <!-- Content Row -->
                    <div class="row">

                        <% if @lecturas.present?%>
                            <% @lecturas.each do |lectura| %>
                                <div class="col-lg-3 mb-4">

                                    <!-- Item libro -->
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary"><%=lectura.book_title %></p></h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="text-center">
                                                <img class="img-fluid px-3 px-sm-4 mt-3 mb-4" style="width: 220px; height: auto;"
                                                    src="<% if lectura.book_img? %>
                                                            <%= lectura.book_img %>
                                                        <% else %>
                                                        https://d3525k1ryd2155.cloudfront.net/h/848/258/116258848.0.m.jpg
                                                        <% end %>" alt="...">
                                            </div>
                                            <a target="_blank" rel="nofollow" href="<%= book_detail_path(lectura['id'])%>">Ver m√°s detalles del libro &rarr;</a>
                                        </div>
                                    </div>

                                </div>
                            <%end %>
                        <% else %>
                            <p>No tiene lecturas.</p>
                        <% end %>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->


        </div>
        <!-- End of Content Wrapper -->

    </div>

    <!-- Core plugin JavaScript
    <%= javascript_include_tag 'jquery.easing.min' %>-->

    <!-- Bootstrap core JavaScript-->
    <%= javascript_include_tag 'jquery.min.js' %>
    <%= javascript_include_tag 'bootstrap.bundle.min' %>
    
    <!-- Custom scripts for all pages-->
    <%= javascript_include_tag 'sb-admin-2.min' %>

</body>

</html>